{
  "name": "smart-home",
  "version": "1.0.0",
  "description": "Backend service for Smart Home project",
  "main": "dist/index.js",
  "scripts": {
    "build": "npx tsc",
    "start": "tsc && node ./dist/app/index.js",
    "dev": "nodemon -L app/presentation/express/settings/server.ts",
    "test": "jest --passWithNoTests",
    "test-coverage": "jest --coverage",
    "pm2": "tsc && pm2-runtime start pm2.config.js"
  },
  "author": "Marc Lopez Garcia",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "bcrypt-ts": "^5.0.1",
    "cors": "^2.8.5",
    "express-pino-logger": "^7.0.0",
    "glob": "^10.4.1",
    "jest-environment-jsdom": "^29.7.0",
    "mongoose": "^8.1.0",
    "pino": "^8.21.0",
    "pino-http": "^9.0.0",
    "pino-pretty": "^11.0.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.3.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "@types/pino": "^7.0.5",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/yamljs": "^0.2.34",
    "dotenv": "^16.3.2",
    "express": "^4.18.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "app"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./app/presentation/express/settings/server.ts",
    "ext": "ts, js"
  }
}
